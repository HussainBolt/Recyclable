<%- include('../partials/header') %>

<div class="flex-container">
  <h1 class="title-card"><%= recyclable.title %></h1>
  <div class="flex-container show-recyclable">
    <div>Material: <%= recyclable.material %></div>
    <div>How many: <%= recyclable.howMany %> recyclable<%- recyclable.howMany !== 1 ? 's' : '' %></div>
    
    <% if(recyclable.details) { %>
      <div>
        Details:
        <ul>
          <% recyclable.details = recyclable.details[0].split(', ') %>
          <% recyclable.details.forEach(function(s) { %>
            <li>
              <%= s %>
            </li>
          <% }) %>
        </ul>
      </div>
      <div>Pick-Up Location: <%= recyclable.address %></div>
      <% } %>
    <div>
      <h1 class="user">Reported by <%= recyclable.userName %></h1>
    </div>
    <% if(user && user._id.equals(recyclable.user)) { %>
      <div>
        <form action="/recyclables/<%= recyclable._id %>/edit" method="GET">
            <button class="btn">Edit Recyclable</button>
        </form>
      </div>
      <div>
        <form action="/recyclables/<%= recyclable._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn">Delete Recyclable</button>
        </form>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>